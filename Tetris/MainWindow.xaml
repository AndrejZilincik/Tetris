<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="Simple Tetris" Height="460" Width="320" KeyDown="Window_KeyDown">
    <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="WhiteSmoke">
        <DockPanel DockPanel.Dock="Right">
            <Canvas DockPanel.Dock="Top" Name="FuturePiece" Width="83" Height="83" VerticalAlignment="Top" Background="Transparent" Margin="2"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                <TextBlock FontSize="16" TextAlignment="Right" Margin="2">Score:</TextBlock>
                <TextBlock Name="ScoreBox" FontSize="16" TextAlignment="Right" Margin="2">0</TextBlock>
            </StackPanel>
        </DockPanel>
        <Canvas Name="MainCanvas" Width="209" Height="419" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Margin="2"/>
    </DockPanel>
</Window>
